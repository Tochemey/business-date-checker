{
  "name": "business-date-checker",
  "version": "1.0.0",
  "description": "Business Date Checker",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "coverage": "jest --ci --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tochemey/business-date-checker.git"
  },
  "keywords": [
    "Business",
    "Date",
    "Holidays",
    "Weekend"
  ],
  "author": "Arsene T. Gandote <tochemey26@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tochemey/business-date-checker/issues"
  },
  "homepage": "https://github.com/Tochemey/business-date-checker#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/moment-business": "^0.1.4",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^14.14.6",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "date-holidays": "^1.8.1",
    "i18n-iso-countries": "^6.2.2",
    "moment": "^2.29.1",
    "moment-business": "^3.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverage": true,
    "testEnvironment": "node"
  }
}
